<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="vertical">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SECTION 2-Damage Form"
                android:textSize="16sp"
                android:textStyle="bold" />



            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/ic_error_outline_black_24dp"
                app:mtf_labelColor="#666">

                <EditText
                    android:id="@+id/et_kerusakan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Kerusakan" />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/spinner_intervalKerusakan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Interval Kerusakan"
                android:textColorHint="#05ab9a"
                app:met_floatingLabel="normal" />

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/ic_zoom_out_map_black_24dp"
                app:mtf_labelColor="#666">

                <EditText
                    android:id="@+id/et_luasan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Luasan 1" />
            </com.github.florent37.materialtextfield.MaterialTextField>
            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/ic_zoom_out_map_black_24dp"
                app:mtf_labelColor="#666">

                <EditText
                    android:id="@+id/et_luasan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Luasan 2" />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/ic_pie_chart_outlined_black_24dp"
                app:mtf_labelColor="#666">

                <EditText
                    android:id="@+id/et_nilaiPengurang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Nilai Pengurang" />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/ic_build_black_24dp"
                app:mtf_labelColor="#666">

                <EditText
                    android:id="@+id/et_faktorKoreksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Faktor Koreksi" />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/ic_build_black_24dp"
                app:mtf_labelColor="#666">

                <EditText
                    android:id="@+id/et_faktorNilai1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Faktor Nilai 1" />
            </com.github.florent37.materialtextfield.MaterialTextField>
            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/ic_build_black_24dp"
                app:mtf_labelColor="#666">

                <EditText
                    android:id="@+id/et_faktorNilai2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Faktor Nilai 2" />
            </com.github.florent37.materialtextfield.MaterialTextField>


            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/ic_build_black_24dp"
                app:mtf_labelColor="#666">

                <EditText
                    android:id="@+id/et_bobotKomponen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Bobot Komponen" />
            </com.github.florent37.materialtextfield.MaterialTextField>



        </LinearLayout>


        <!--</LinearLayout>-->



    </RelativeLayout>
</ScrollView>



