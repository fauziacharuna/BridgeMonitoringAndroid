                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="10dp"
                            android:text="Informasi Engineer dan Jembatan"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp">


                            <TextView
                                android:id="@+id/tv_engName_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Engineer Name" />


                            <TextView
                                android:id="@+id/tv_EngName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_toRightOf="@+id/tv_engName_title"
                                android:gravity="right"
                                android:text="Fauzi "
                                android:textColor="@color/colorPrimary" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp">


                            <TextView
                                android:id="@+id/tv_BridgeName_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bridge Name" />

                            <TextView
                                android:id="@+id/tv_BridgeName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="Jembatan PascaSarjana UGM"
                                android:textColor="@color/colorPrimary" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:id="@+id/rv_bridge_location_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bridge Location" />


                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="Yogyakarta"
                                android:textColor="@color/colorPrimary" />
                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>


